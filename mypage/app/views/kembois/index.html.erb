<h1>Listing kembois</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kembois.each do |kemboi| %>
      <tr>
        <td><%= kemboi.name %></td>
        <td><%= kemboi.address %></td>
        <td><%= link_to 'Show', kemboi %></td>
        <td><%= link_to 'Edit', edit_kemboi_path(kemboi) %></td>
        <td><%= link_to 'Destroy', kemboi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

